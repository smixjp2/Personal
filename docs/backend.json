{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp when the user profile was created."
        }
      },
      "required": ["displayName", "email", "createdAt"]
    },
    "ShoppingItem": {
      "title": "Shopping Item",
      "description": "An item in the shopping list.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "price": { "type": "number" },
        "purchased": { "type": "boolean" },
        "purchasedAt": { "type": "string", "format": "date-time" },
        "category": { "type": "string", "enum": ["groceries", "subscription", "entertainment", "utilities", "shopping", "transport", "health", "education", "restaurant", "personal_care", "gifts", "other"] },
        "frequency": { "type": "string", "enum": ["one-time", "daily", "monthly", "yearly"] },
        "date": { "type": "string", "format": "date-time" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "purchased", "category", "createdAt", "updatedAt"]
    },
    "WatchlistItem": {
      "title": "Watchlist Item",
      "description": "A movie or TV show to watch.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "category": { "type": "string", "enum": ["movie", "tv-show"] },
        "watched": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "category", "watched", "createdAt", "updatedAt"]
    },
    "Book": {
      "title": "Book",
      "description": "A book to read.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "author": { "type": "string" },
        "read": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "read", "createdAt", "updatedAt"]
    },
    "Income": {
      "title": "Income",
      "description": "An income source.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "amount": { "type": "number" },
        "date": { "type": "string", "format": "date-time" },
        "frequency": { "type": "string", "enum": ["one-time", "monthly", "yearly"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "amount", "date", "frequency", "createdAt", "updatedAt"]
    },
    "SavingGoal": {
      "title": "Saving Goal",
      "description": "A goal for saving money.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "targetAmount": { "type": "number" },
        "currentAmount": { "type": "number" },
        "deadline": { "type": "string", "format": "date-time" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "targetAmount", "currentAmount", "createdAt", "updatedAt"]
    },
    "Investment": {
      "title": "Investment",
      "description": "A financial investment.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" },
        "initialAmount": { "type": "number" },
        "currentValue": { "type": "number" },
        "purchaseDate": { "type": "string", "format": "date-time" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "type", "initialAmount", "purchaseDate", "createdAt", "updatedAt"]
    },
    "Note": {
      "title": "Note",
      "description": "A raw idea or note captured by the user.",
      "type": "object",
      "properties": {
        "content": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["content", "createdAt", "updatedAt"]
    },
    "Affirmation": {
      "title": "Affirmation",
      "description": "A personal affirmation to build confidence.",
      "type": "object",
      "properties": {
        "content": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["content", "createdAt", "updatedAt"]
    },
    "Goal": {
      "title": "Goal",
      "description": "A user's goal.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "category": { "type": "string", "enum": ["personal", "professional"] },
        "subCategory": { "type": "string" },
        "dueDate": { "type": "string", "format": "date-time" },
        "progress": { "type": "number" },
        "imageUrl": { "type": "string", "format": "uri" },
        "imageHint": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "description", "category", "dueDate", "progress", "createdAt", "updatedAt"]
    },
    "CalendarEvent": {
      "title": "Calendar Event",
      "description": "Represents an event on the user's calendar, like a task, deadline, or reminder.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "type": { "type": "string", "enum": ["task", "deadline", "reminder"] },
        "completed": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "date", "type", "completed", "createdAt", "updatedAt"]
    },
    "ReflectionPillar": {
      "title": "Reflection Pillar",
      "description": "A high-level strategic question or theme for user reflection.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["title", "description", "createdAt", "updatedAt"]
    },
    "Project": {
      "title": "Project",
      "description": "A user's project, like a YouTube channel or side business.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "link": { "type": "string", "format": "uri" },
        "status": { "type": "string", "enum": ["monetized", "pre-monetization", "idea"] },
        "imageUrl": { "type": "string", "format": "uri" },
        "imageHint": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "description", "status", "createdAt", "updatedAt"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information."
    },
    "/users/{userId}/shopping-list/{itemId}": {
      "schema": { "$ref": "#/entities/ShoppingItem" },
      "description": "Stores user shopping list items."
    },
    "/users/{userId}/watchlist/{itemId}": {
      "schema": { "$ref": "#/entities/WatchlistItem" },
      "description": "Stores user watchlist items."
    },
    "/users/{userId}/reading-list/{bookId}": {
      "schema": { "$ref": "#/entities/Book" },
      "description": "Stores user reading list items."
    },
    "/users/{userId}/income/{incomeId}": {
      "schema": { "$ref": "#/entities/Income" },
      "description": "Stores user income records."
    },
    "/users/{userId}/saving-goals/{goalId}": {
      "schema": { "$ref": "#/entities/SavingGoal" },
      "description": "Stores user saving goals."
    },
    "/users/{userId}/investments/{investmentId}": {
      "schema": { "$ref": "#/entities/Investment" },
      "description": "Stores user investments."
    },
    "/users/{userId}/notes/{noteId}": {
      "schema": { "$ref": "#/entities/Note" },
      "description": "Stores user's raw notes and ideas."
    },
    "/users/{userId}/affirmations/{affirmationId}": {
      "schema": { "$ref": "#/entities/Affirmation" },
      "description": "Stores user's personal affirmations."
    },
    "/users/{userId}/goals/{goalId}": {
      "schema": { "$ref": "#/entities/Goal" },
      "description": "Stores user goals."
    },
    "/users/{userId}/calendar-events/{eventId}": {
      "schema": { "$ref": "#/entities/CalendarEvent" },
      "description": "Stores user's calendar events."
    },
    "/users/{userId}/reflection-pillars/{pillarId}": {
      "schema": { "$ref": "#/entities/ReflectionPillar" },
      "description": "Stores user's strategic reflection pillars."
    },
    "/users/{userId}/projects/{projectId}": {
      "schema": { "$ref": "#/entities/Project" },
      "description": "Stores user's projects."
    }
  }
}
