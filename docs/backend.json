{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The timestamp when the user profile was created."
        }
      },
      "required": ["displayName", "email", "createdAt"]
    },
    "Habit": {
      "title": "Habit",
      "description": "A habit the user wants to track.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "frequency": { "type": "string", "enum": ["daily", "monthly", "yearly"] },
        "progress": { "type": "number" },
        "goal": { "type": "number" },
        "icon": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "frequency", "icon", "createdAt", "updatedAt"]
    },
    "Goal": {
      "title": "Goal",
      "description": "A goal the user wants to achieve.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "category": { "type": "string", "enum": ["personal", "professional", "course"] },
        "dueDate": { "type": "string", "format": "date-time" },
        "progress": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "description", "category", "dueDate", "createdAt", "updatedAt"]
    },
    "Project": {
      "title": "Project",
      "description": "A project the user is working on.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "status": { "type": "string", "enum": ["idea", "in-progress", "completed"] },
        "dueDate": { "type": "string", "format": "date-time" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "status", "createdAt", "updatedAt"]
    },
    "Task": {
      "title": "Task",
      "description": "A single task item.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "completed": { "type": "boolean" },
        "dueDate": { "type": "string", "format": "date-time" },
        "priority": { "type": "string", "enum": ["low", "medium", "high"] },
        "goalId": { "type": "string" },
        "projectId": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "completed", "dueDate", "createdAt", "updatedAt"]
    },
    "ShoppingItem": {
      "title": "Shopping Item",
      "description": "An item in the shopping list.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "price": { "type": "number" },
        "purchased": { "type": "boolean" },
        "purchasedAt": { "type": "string", "format": "date-time" },
        "category": { "type": "string", "enum": ["groceries", "subscription", "entertainment", "utilities", "shopping", "other"] },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "purchased", "category", "createdAt", "updatedAt"]
    },
    "WatchlistItem": {
      "title": "Watchlist Item",
      "description": "A movie or TV show to watch.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "category": { "type": "string", "enum": ["movie", "tv-show"] },
        "watched": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "category", "watched", "createdAt", "updatedAt"]
    },
    "Book": {
      "title": "Book",
      "description": "A book to read.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "author": { "type": "string" },
        "read": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "read", "createdAt", "updatedAt"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information."
    },
    "/users/{userId}/habits/{habitId}": {
      "schema": { "$ref": "#/entities/Habit" },
      "description": "Stores user habits."
    },
    "/users/{userId}/goals/{goalId}": {
      "schema": { "$ref": "#/entities/Goal" },
      "description": "Stores user goals."
    },
    "/users/{userId}/projects/{projectId}": {
      "schema": { "$ref": "#/entities/Project" },
      "description": "Stores user projects."
    },
    "/users/{userId}/tasks/{taskId}": {
      "schema": { "$ref": "#/entities/Task" },
      "description": "Stores user tasks."
    },
    "/users/{userId}/shopping-list/{itemId}": {
      "schema": { "$ref": "#/entities/ShoppingItem" },
      "description": "Stores user shopping list items."
    },
    "/users/{userId}/watchlist/{itemId}": {
      "schema": { "$ref": "#/entities/WatchlistItem" },
      "description": "Stores user watchlist items."
    },
    "/users/{userId}/reading-list/{bookId}": {
      "schema": { "$ref": "#/entities/Book" },
      "description": "Stores user reading list items."
    }
  }
}
